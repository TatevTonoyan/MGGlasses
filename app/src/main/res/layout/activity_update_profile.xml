<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UserProfileActivity"
    android:background="@color/cream">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Toolbar -->
        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:title="MGlasses"
            app:titleTextColor="@color/pulink"
            android:background="@color/white" />

        <!-- Profile Picture -->
        <ImageView
            android:id="@+id/profile"
            android:layout_width="325dp"
            android:layout_height="200dp"
            android:layout_gravity="center"
            android:src="@drawable/blue"
            android:scaleType="centerCrop"
            android:layout_marginTop="20dp"/>

        <!-- Welcome Text -->
        <TextView
            android:id="@+id/welcome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:text="MGGlasses!"
            android:textAppearance="@style/TextAppearance.AppCompat.Headline"
            android:textColor="@color/lbu"
            android:textSize="35sp"
            android:textStyle="bold" />

        <!-- Notes Section -->
        <EditText
            android:id="@+id/et_notes"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:hint="Write your notes here..."
            android:textColorHint="@color/light"
            android:padding="10dp"
            android:background="@android:color/white"
            android:textColor="@color/pulink"
            android:textSize="16sp"
            android:gravity="top"
            android:layout_marginTop="9dp"
            android:inputType="textMultiLine"
            android:layout_margin="10dp"/>

        <ProgressBar
            android:id="@+id/tx_progressBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="?android:attr/progressBarStyleLarge"
            android:visibility="gone"
            android:layout_gravity="center"
            android:layout_marginTop="20dp" />

        <TextView
            android:id="@+id/quiz_results_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="Task Results"
            android:textSize="18sp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:gravity="center"
            android:background="@color/tea_green"
            android:padding="16dp" />
        <Button
            android:id="@+id/start_quiz_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/black"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            android:layout_margin="10dp"
            android:text="Start Quiz"/>



        <!-- Buttons -->
        <Button
            android:id="@+id/btn_eye_exercises"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Eye Exercises"
            android:backgroundTint="@color/black"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            android:layout_margin="10dp" />

        <Button
            android:id="@+id/btn_logout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Log Out"
            android:backgroundTint="@color/black"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            android:layout_margin="10dp" />

    </LinearLayout>
</ScrollView>
