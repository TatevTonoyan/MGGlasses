<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Warby_ParkerActivity">

    <!-- LinearLayout wrapped in ScrollView -->
    <LinearLayout
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/grren"
        android:padding="16dp">

        <TextView
            android:id="@+id/warby_parker_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Warby Parker Glasses"
            android:textSize="27sp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:paddingBottom="16dp" />

        <!-- Image of Warby Parker Glasses -->
        <ImageView
            android:id="@+id/warby_parker_image"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:src="@drawable/war"
            android:contentDescription="Warby Parker Glasses"
            android:layout_gravity="center"
            android:scaleType="centerCrop"
            android:layout_marginBottom="16dp"/>

        <!-- Descriptions -->
        <TextView
            android:id="@+id/warby_parker_description1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Warby Parker, founded in 2010, is an American eyewear company offering stylish glasses at an affordable price, disrupting the eyewear industry with their direct-to-consumer model."
            android:textSize="16sp"
            android:textColor="@color/black"
            android:lineSpacingExtra="8dp"
            android:paddingBottom="16dp"/>

        <TextView
            android:id="@+id/warby_parker_description2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="The company is known for its fashionable designs and its commitment to social responsibility, including its 'Buy a Pair, Give a Pair' program."
            android:textSize="16sp"
            android:textColor="@color/black"
            android:lineSpacingExtra="8dp"
            android:paddingBottom="16dp"/>

        <TextView
            android:id="@+id/warby_parker_description3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Warby Parker offers a wide range of trendy frames that cater to all face shapes and styles, while maintaining high quality at a fraction of the price compared to traditional retailers."
            android:textSize="16sp"
            android:textColor="@color/black"
            android:lineSpacingExtra="8dp"
            android:paddingBottom="16dp"/>

        <TextView
            android:id="@+id/warby_parker_description4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="The brandâ€™s eyewear designs are simple yet stylish, and the frames are known for their lightweight comfort and durable materials."
            android:textSize="16sp"
            android:textColor="@color/black"
            android:lineSpacingExtra="8dp"
            android:paddingBottom="16dp"/>

        <TextView
            android:id="@+id/warby_parker_description5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Today, Warby Parker continues to lead the charge in offering high-quality, stylish eyewear without the hefty price tag."
            android:textSize="16sp"
            android:textColor="@color/black"
            android:lineSpacingExtra="8dp"
            android:paddingBottom="16dp"/>

        <!-- Back Button to Profile -->
        <Button
            android:id="@+id/btn_back_to_profile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Back to Profile"
            android:layout_marginTop="16dp"
            android:backgroundTint="@color/black"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            android:layout_marginBottom="16dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"/>
    </LinearLayout>

</ScrollView>
