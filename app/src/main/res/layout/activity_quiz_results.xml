<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/white"
    android:padding="20dp">

    <ImageView
        android:id="@+id/image_vegetable"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_marginBottom="10dp"
        app:srcCompat="@drawable/pilf"/>

    <TextView
        android:id="@+id/tv_result"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="20dp"
        android:layout_gravity="center"
        android:text="Your result will be here!"
        android:textColor="@color/black"
        android:textSize="26sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btn_back_to_profile"
        android:layout_width="268dp"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/black"
        android:text="Back to Profile"
        android:textSize="18dp"
        android:layout_gravity="center"
        android:textColor="@color/white" />
    <ImageView
        android:id="@+id/image_pill"
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/pill"/>
</LinearLayout>
