<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PersolActivity">

    <LinearLayout
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/grren"
        android:padding="16dp">

        <TextView
            android:id="@+id/persol_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Persol Glasses"
            android:textSize="27sp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:paddingBottom="16dp" />

        <ImageView
            android:id="@+id/persol_image"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:src="@drawable/persol"
            android:contentDescription="Persol Glasses"
            android:layout_gravity="center"
            android:scaleType="centerCrop"
            android:layout_marginBottom="16dp"/>

        <TextView
            android:id="@+id/persol_description1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Persol is an Italian brand founded in 1917, famous for its luxury eyewear and innovative designs. The brand's signature 'Meflecto' temples are known for their flexibility."
            android:textSize="16sp"
            android:textColor="@color/black"
            android:lineSpacingExtra="8dp"
            android:paddingBottom="16dp"/>

        <TextView
            android:id="@+id/persol_description2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Persol's eyewear collections are celebrated for their sophisticated style, cutting-edge technology, and timeless craftsmanship."
            android:textSize="16sp"
            android:textColor="@color/black"
            android:lineSpacingExtra="8dp"
            android:paddingBottom="16dp"/>

        <TextView
            android:id="@+id/persol_description3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="The brand is widely recognized for its combination of elegance, function, and luxury, creating eyewear that has both performance and fashion appeal."
            android:textSize="16sp"
            android:textColor="@color/black"
            android:lineSpacingExtra="8dp"
            android:paddingBottom="16dp"/>

        <TextView
            android:id="@+id/persol_description4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Persol glasses remain highly sought-after due to their superior materials and comfort, making them the eyewear of choice for many celebrities."
            android:textSize="16sp"
            android:textColor="@color/black"
            android:lineSpacingExtra="8dp"
            android:paddingBottom="16dp"/>

        <TextView
            android:id="@+id/persol_description5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Today, Persol continues to be a symbol of Italian craftsmanship, blending luxury with functional eyewear."
            android:textSize="16sp"
            android:textColor="@color/black"
            android:lineSpacingExtra="8dp"
            android:paddingBottom="16dp"/>

        <Button
            android:id="@+id/btn_back_to_profile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Back to Profile"
            android:layout_marginTop="16dp"
            android:backgroundTint="@color/black"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            android:layout_margin="10dp"/>
    </LinearLayout>
</ScrollView>
